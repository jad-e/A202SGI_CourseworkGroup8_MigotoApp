<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/ms_background_color"
    tools:context=".MissionSettingsActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/MissionPage_backImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="?attr/ms_back_arrow_color" />

        <TextView
            android:id="@+id/MissionPage_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/MissionPage_main_title"
            android:textColor="?attr/ms_main_title_color"
            android:textSize="22sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/missionDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans_bold"
                android:text="@string/missionDifficulty"
                android:textColor="?attr/ms_subtitle_color" />

            <androidx.cardview.widget.CardView
                android:id="@+id/settings_mission_shakeDif_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="?attr/ms_card_background_color"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/settings_mission_shakeDif_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/settings_mission_shakeDif_textView"
                        android:textColor="?attr/ms_card_title_color"
                        android:textSize="19sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/settings_mission_shakeDif_details_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_mission_shakeDif_details_txtView"
                        android:textColor="?attr/ms_card_details_color"
                        app:layout_constraintStart_toStartOf="@+id/settings_mission_shakeDif_textView"
                        app:layout_constraintTop_toBottomOf="@+id/settings_mission_shakeDif_textView" />

                    <ImageView
                        android:id="@+id/settings_mission_shakeDif_clickForMore"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_arrow_to_right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/ms_card_more_arrow_color" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/settings_mission_mathDif_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="?attr/ms_card_background_color"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/settings_mission_mathDif_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="@string/settings_mission_mathDif_textView"
                        android:textColor="?attr/ms_card_title_color"
                        android:textSize="19sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/settings_mission_mathDif_details_txtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_mission_mathDif_details_txtView"
                        android:textColor="?attr/ms_card_details_color"
                        app:layout_constraintStart_toStartOf="@+id/settings_mission_mathDif_textView"
                        app:layout_constraintTop_toBottomOf="@+id/settings_mission_mathDif_textView" />

                    <ImageView
                        android:id="@+id/settings_mission_mathDif_clickForMore"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_arrow_to_right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="?attr/ms_card_more_arrow_color" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>