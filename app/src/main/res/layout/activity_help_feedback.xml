<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/hf_background_color"
    tools:context=".HelpFeedbackActivity">

    <RelativeLayout
        android:id="@+id/FAQPage_header_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/FAQPage_backImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="?attr/hf_back_arrow_color" />

        <TextView
            android:id="@+id/FAQPage_main_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/FAQPage_main_title"
            android:textColor="?attr/hf_main_title_color"
            android:textSize="22sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/FAQ_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FAQPage_header_relative_layout"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/contact_us_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="30dp"
        android:backgroundTint="#268ae1"
        android:clickable="true"
        android:src="@drawable/ic_baseline_email_24"
        app:fabCustomSize="70dp"
        app:fabSize="normal"
        app:tint="@color/white" />

</RelativeLayout>

