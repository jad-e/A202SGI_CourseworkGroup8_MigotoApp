<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="20dp"
    app:cardBackgroundColor="?attr/lic_card_background_color"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_item_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/alarm_clock_wake_up_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="07:30"
            android:textColor="?attr/lic_card_inactive_details_color"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Switch
            android:id="@+id/alarm_is_on_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:checked="false"
            app:layout_constraintBottom_toBottomOf="@+id/alarm_clock_wake_up_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/alarm_clock_wake_up_time" />

        <View
            android:id="@+id/line_separator_horizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="?attr/lic_card_inactive_details_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alarm_clock_wake_up_time" />


        <TextView
            android:id="@+id/list_item_alarm_clock_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Example Title"
            android:textColor="?attr/lic_card_inactive_details_color"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/line_separator_horizontal"
            app:layout_constraintTop_toBottomOf="@+id/line_separator_horizontal" />

        <ImageView
            android:id="@+id/drop_down_for_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_arrow_down"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_separator_horizontal" />


        <ImageView
            android:id="@+id/mission_icon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_alarm"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/list_item_alarm_clock_title_text_view"
            app:layout_constraintTop_toBottomOf="@+id/list_item_alarm_clock_title_text_view"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/mission_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/list_item_alarm_mission_text"
            android:textColor="?attr/lic_card_inactive_details_color"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/mission_icon"
            app:layout_constraintStart_toEndOf="@+id/mission_icon"
            app:layout_constraintTop_toTopOf="@+id/mission_icon"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/mission_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="@string/list_item_alarm_mission_value1"
            android:textColor="?attr/lic_card_inactive_details_color"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/mission_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mission_title"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ringtone_icon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_music_note"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/mission_icon"
            app:layout_constraintTop_toBottomOf="@+id/mission_icon"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/ringtone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/list_item_alarm_ringtone_text"
            android:textColor="?attr/lic_card_inactive_details_color"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/ringtone_icon"
            app:layout_constraintStart_toEndOf="@+id/ringtone_icon"
            app:layout_constraintTop_toTopOf="@+id/ringtone_icon"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/ringtone_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:ellipsize="end"
            android:maxLength="35"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:text="@string/list_item_alarm_ringtone_value1"
            android:textColor="?attr/lic_card_inactive_details_color"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/ringtone_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ringtone_title"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/vibrate_icon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_vibrate"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ringtone_icon"
            app:layout_constraintTop_toBottomOf="@+id/ringtone_icon"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/vibrate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/list_item_alarm_vibrate_text"
            android:textColor="?attr/lic_card_inactive_details_color"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/vibrate_icon"
            app:layout_constraintStart_toEndOf="@+id/vibrate_icon"
            app:layout_constraintTop_toTopOf="@+id/vibrate_icon"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/vibrate_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="@string/list_item_alarm_vibrate_valueOn"
            android:textColor="?attr/lic_card_inactive_details_color"
            android:textSize="12sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/vibrate_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/vibrate_title"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>